{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.work", "go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "userPlaceholders": true
      }
  },
  "python.jediEnabled": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "golang",
    "json",
    "css",
    "scss",
    "html",
    "python"
  ]
}
